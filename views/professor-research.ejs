<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor Researches</title>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
          rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/professor-research/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
  <!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-dark navbar-dark py-1 fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/after_login">
        <p class="masfofa">Masfofa<span>!</span></p>
      </a> 
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
      data-bs-target="#navmenu"><span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navmenu">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a href="#" class="nav-link d-flex align-items-center profile-link" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="<%= userData.profileimage %>" alt="Profile" class="rounded-circle" width="40" height="40">
              <p class="mb-0 ms-2 profile-name"><%= userData.fname %></p>
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/profile-page">Profile</a>
             
              <a class="dropdown-item" href="/logout">Log out</a>
            </div>
          </li>  
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/after_login" class="nav-link">Home</a>
          </li>  
        </ul>
      </div>
    </div>
  </nav>
    <!-- Showcase -->
    <section class="bg-dark text-light p-5 p-lg-0 p-md-0 pt-lg-5 pt-md-5 mt-3 text-center text-sm-start">
        <div class="container">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h2 class="mb-4">Keep learning, <span style="color: #7495ED;">stay curious!</span></h2>
                </div>
            </div>
        </div>
    </section>

    <section class="hh">
        <div class="d-flex align-items-center vv">
            <div class="post-row d-flex justify-content-between w-100 align-items-center">    
              <!-- Search Bar -->
              <div class="box">
                  <input type="text" name="search" placeholder="Search here....">
                  <a href="#">
                      <i class="fas fa-search"></i>
                  </a>
              </div>
              <div>
                  <a href="/professor-research-upload" style="text-decoration: none;">
                    <label for="actual-btn" class="boot">Upload</label>
                    </a>
                </div>
        </div>
      </div>
        <div class="container">
            <b> <hr> </b>
            <b> <hr> </b>
        </div>

        <!-- Tabs and Cards -->
        <div class="container mt-4">
            <ul class="nav nav-tabs" id="yearTabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#year1">Your prepared researches</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#year2">Your ongoing research work</a>
                </li>
            </ul>

            <div class="tab-content mt-3">
                <!-- Year1 (Prepared Researches) -->
                <div id="year1" class="tab-pane fade show active">
                    <div class="row g-2">
                        <% if (userData.result && userData.result.length > 0) { %>
                            <% userData.result.forEach(function(research) { %>
                                <% if (research.status === 'year1') { %>
                                    <div class="col-md-3 col-sm-6 mb-2">
                                        <div class="card p-2 text-start" style="min-height: 150px;">
                                            <div class="post-row d-flex justify-content-between align-items-center">
                                            <div class="user-profile">
                                            <h6 class="card-title mt-2"><%= research.title %></h6>                                               
                                            </div> 
                                            <div class="dropdown">
                <a href="#" class="text-decoration-none" data-bs-toggle="dropdown" data-bs-display="dynamic" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
             <ul class="dropdown-menu dropdown-menu-end">
    <li><a class="dropdown-item" href="<%= research.path %>" download>Download</a></li>
    <li><a class="dropdown-item delete-btn" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal" data-research-id="<%= research.id %>">Delete</a></li>
</ul>
            </div>
            </div>
     
                                            <a href="<%= research.path %>" class="btn btn-sm mt-2" style="background-color: #7495ED; color: white;">Discover</a>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                            <% if (!userData.result.some(r => r.status === 'year1')) { %>
                                <div class="col-12 text-center py-4">
                                    <p>No prepared researches found</p>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="col-12 text-center py-4">
                                <p>No research data available</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Year2 (Ongoing Research Work) -->
                <div id="year2" class="tab-pane fade">
                    <div class="row g-2">
                        <% if (userData.result && userData.result.length > 0) { %>
                            <% userData.result.forEach(function(research) { %>
                                <% if (research.status === 'year2') { %>
                                    <div class="col-md-3 col-sm-6 mb-2">
                                        <div class="card p-2 text-start" style="min-height: 150px;">
                                          <div class="post-row d-flex justify-content-between align-items-center">
                                            <div class="user-profile">
                                            <h6 class="card-title mt-2"><%= research.title %></h6>
                                            </div>     
                                            <div class="dropdown">
                                                      <a href="#" class="text-decoration-none" data-bs-toggle="dropdown" data-bs-display="dynamic" aria-expanded="false">
                                                           <i class="fa fa-ellipsis-v"></i>
                                                                     </a>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                             <li><a class="dropdown-item" href="<%= research.path %>" download>Download</a></li>
                                                                  <li><a class="dropdown-item delete-btn" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal" data-research-id="<%= research.id %>">Delete</a></li>
                                                                        </ul>
                                                                        </div></div>
                                            <a href="<%= research.path %>" class="btn btn-sm mt-2" style="background-color: #7495ED; color: white;">Discover</a>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                            <% if (!userData.result.some(r => r.status === 'year2')) { %>
                                <div class="col-12 text-center py-4">
                                    <p>No ongoing research work found</p>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="col-12 text-center py-4">
                                <p>No research data available</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <!-- Footer -->
    <section style="height: 100px;" class="bg-dark d-flex justify-content-center align-items-center flex-column">
        <h4 style="color: white; margin-bottom: 10px;">Made by</h4>
        <a href="/after_login" style="text-decoration: none; color: white;">Masfofa Team</a>
    </section>
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this research? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/professor-research/main.js"></script>
<script>
// Delete Research Functionality
document.addEventListener('DOMContentLoaded', function() {
    let researchIdToDelete = null;
    
    // Set up delete button click handlers
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function() {
            researchIdToDelete = this.dataset.researchId;
        });
    });

    // Confirm delete button handler
    document.getElementById('confirmDelete').addEventListener('click', async function() {
        if (!researchIdToDelete) return;

        try {
            const response = await fetch(`/professor-research/delete/${researchIdToDelete}`, {
                method: 'DELETE'
            });

            if (response.ok) {
                window.location.reload(); // Refresh to show changes
            } else {
                alert('Failed to delete research');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while deleting');
        }
    });
});
</script>
</body>
</html>