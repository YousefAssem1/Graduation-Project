        <script>
// Add this JavaScript at the end of your file, before closing body tag
document.addEventListener('DOMContentLoaded', () => {
    const professorSelect = document.getElementById('professorSelect');
    const imagePreview = document.getElementById('imagePreview');

    // Load professor data
    professorSelect.addEventListener('change', async (e) => {
        const email = e.target.value;
        try {
            const response = await fetch(`/professors/${email}`);
            const professor = await response.json();
            
            // Update form fields
            document.getElementById('professorName').value = professor.professor_name;
            document.getElementById('professorEmail').value = professor.professor_email;
            document.getElementById('academicDegree').value = professor.professor_degree || '';
            document.getElementById('universityCode').value = professor.university_code;
            document.getElementById('collegeName').value = professor.college_name;
            document.getElementById('researchInterest').value = professor.professor_research_interest;
            
            // Update image preview
            imagePreview.style.display = 'block';
            imagePreview.src = professor.professor_image;
        } catch (error) {
            console.error('Error loading professor:', error);
            showNotification('Error loading professor data', 'error');
        }
    });

    // Handle image upload preview
    document.getElementById('professorImage').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        }
    });

    // Handle form submission
    document.getElementById('editFacultyForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const originalEmail = professorSelect.value;
        const formData = new FormData(e.target);

        try {
            const response = await fetch(`/update-faculty/${originalEmail}`, {
                method: 'PUT',
                body: formData
            });

            const result = await response.json();
            
            if (response.ok) {
                showNotification('Faculty updated successfully', 'success');
                // Update dropdown if email changed
                if (result.updatedEmail && result.updatedEmail !== originalEmail) {
                    const option = professorSelect.querySelector(`option[value="${originalEmail}"]`);
                    option.value = result.updatedEmail;
                    option.textContent = `${formData.get('professorName')} (${result.updatedEmail})`;
                }
            } else {
                throw new Error(result.error || 'Update failed');
            }
        } catch (error) {
            console.error('Update error:', error);
            showNotification(error.message, 'error');
        }
    });
});

function resetEditForm() {
    document.getElementById('editFacultyForm').reset();
    document.getElementById('imagePreview').style.display = 'none';
    document.getElementById('professorSelect').selectedIndex = 0;
}

function showNotification(message, type = 'success') {
    const notification = document.createElement('div');
    notification.className = `notification ${type} show`;
    notification.textContent = message;
    document.body.appendChild(notification);

    setTimeout(() => {
        notification.remove();
    }, 3000);
}
</script>

