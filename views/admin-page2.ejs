        /* Notification Styles */
.notification {
    position: fixed;
    bottom: 20px;
    right: -300px;
    padding: 15px 25px;
    border-radius: 5px;
    color: white;
    transition: all 0.3s ease;
    z-index: 1000;
    max-width: 300px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
}

.notification.show {
    right: 20px;
}

.notification.success { background: #28a745; }
.notification.error { background: #dc3545; }
    /* Radio Input Styling */
.radio-input {
    display: flex;
    flex-direction: column; /* Stack vertically */
    gap: 15px; /* Space between radio options */
    margin-top: 10px;
}

.radio-option {
    display: flex;
    align-items: center;
    position: relative;
}

.radio-input input {
    appearance: none;
    width: 1.5em;
    height: 1.5em;
    background-color: #E7F1FF;
    box-shadow: inset 2px 5px 10px rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    transition: .4s ease-in-out;
    cursor: pointer;
    margin: 0;
}

.radio-input input:hover {
    transform: scale(1.1);
    box-shadow: none;
    background-color: #CFE2FF;
}

.radio-input .circle {
    position: absolute;
    left: 0.45em;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 0.6em;
    height: 0.6em;
    background-color: #0d6efd;
    scale: 0;
    border-radius: 50%;
    transition: .4s ease-in-out;
    margin-left: 5px;
}

.radio-input input:checked {
    box-shadow: none;
    border: 1px solid #0d6efd;
    background-color: #E7F1FF;
}

.radio-input input:checked + .circle {
    transform: translate(-50%, -50%) rotate(360deg);
    scale: 1;
}

.radio-label {
    margin-left: 30px;
    cursor: pointer;
    color: #495057;
    transition: color 0.3s;
}

.radio-input input:checked ~ .radio-label {
    color: #0d6efd;
    font-weight: 500;
}
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.modal-content {
    background-color: #fff;
    margin: 15% auto;
    padding: 20px;
    width: 400px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.modal-header {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
    margin-bottom: 15px;
}

.warning-icon {
