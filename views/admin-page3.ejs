<script>
function showNotification(message, type = 'success') {
    const notification = document.createElement('div');
    notification.className = `notification ${type}`;
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.classList.add('show');
        setTimeout(() => notification.remove(), 3000);
    }, 100);
}
</script>
<script>
document.querySelector(".btn-submit").addEventListener("click", async () => {
    const email = document.getElementById("projectTitle").value;
    if (!email) {
        showNotification("Please enter an email", "error");
        return;
    }

    const response = await fetch("/send-admin-invite", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email })
    });

    const data = await response.json();
    if (data.success) {
        showNotification("Invitation sent successfully ✅");
    } else {
        showNotification(data.message || "Something went wrong", "error");
    }
});
</script>
<script>
        let currentAction = null;
        let actionData = null;

        // Add Admin Handler
        document.querySelector(".swiper-slide:first-child .btn-submit").addEventListener("click", async (e) => {
            e.preventDefault();
            const email = document.getElementById("projectTitle").value;
            if (!email) {
                showNotification("Please enter an email", "error");
                return;
            }

            const modal = new bootstrap.Modal(document.getElementById('confirmationModal'));
            document.querySelector('#confirmationModal .modal-body').textContent = 
                `Are you sure you want to add ${email} as an admin?`;
            currentAction = 'addAdmin';
            actionData = { email };
            modal.show();
        });

        // Ban User Handler
        document.getElementById("banForm").addEventListener("submit", (e) => {
            e.preventDefault();
            const userId = document.getElementById("userEmailDropdown").value;
            const reason = document.getElementById("banReason").value;
            
            const modal = new bootstrap.Modal(document.getElementById('confirmationModal'));
            document.querySelector('#confirmationModal .modal-body').textContent = 
                `Are you sure you want to ban this user? Reason: ${reason || 'No reason provided'}`;
            currentAction = 'banUser';
            actionData = { userId, reason };
            modal.show();
        });

        // Confirm Action Handler
        document.getElementById("confirmAction").addEventListener("click", async () => {
            const modal = bootstrap.Modal.getInstance(document.getElementById('confirmationModal'));
            modal.hide();

            if (currentAction === 'addAdmin') {
                const response = await fetch("/send-admin-invite", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(actionData)
                });
                const data = await response.json();
                if (data.success) {
                    showNotification("Invitation sent successfully ✅");
                } else {
                    showNotification(data.message || "Something went wrong", "error");
                }
            } 
            else if (currentAction === 'banUser') {
                const response = await fetch("/ban-user", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(actionData)
                });
                const data = await response.json();
                if (data.success) {
                    showNotification("User banned successfully");
                    document.getElementById("banForm").reset();
                } else {
                    showNotification(data.message || "Ban failed", "error");
                }
            }

            currentAction = null;
            actionData = null;
        });


    </script>
