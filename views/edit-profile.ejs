                       <!-- Replace the existing file upload HTML with this -->
<tr>
    <th><label>New Photo</label></th>
    <th>
        <!-- Hidden file input -->
        <input type="file" id="file" class="cc" name="profileimage" accept="image/jpeg,image/jpg,image/png,image/gif" style="display: none;" />
        
        <!-- Circular upload control -->
        <label for="file" class="circular-upload" id="file-name-label">
            <div class="upload-content" id="upload-content">
