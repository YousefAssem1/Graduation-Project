                    <table>
        <thead>
 <tr>
                <th> </th>
                <th> </th> <tr>
                <th> First Name </th>
                <th> <div class="container">
           <div class="wave-group">
               <input required type="text" class="input" required value=<%= userData.fname %> name="fname">
               <span class="bar"></span>
               <label class="label">
                <span class="label-char" style="--index: 0">F</span>
                <span class="label-char" style="--index: 0">i</span>
                <span class="label-char" style="--index: 0">r</span>
                <span class="label-char" style="--index: 0">s</span>
                <span class="label-char" style="--index: 0">t</span>
                <span class="label-char" style="--index: 0"> </span>
                <span class="label-char" style="--index: 0">N</span>
                <span class="label-char" style="--index: 1">a</span>
                <span class="label-char" style="--index: 2">m</span>
                <span class="label-char" style="--index: 3">e</span>
               </label>
           </div>
           <tr>
            <th> Last Name </th>
            <th> 
                <div class="container">
                    <div class="wave-group">
                        <input required type="text" class="input" required value="<%= userData.lname %>" name="lname">
                        <span class="bar"></span>
                        <label class="label">
                            <span class="label-char" style="--index: 0">L</span>
                            <span class="label-char" style="--index: 1">a</span>
                            <span class="label-char" style="--index: 2">s</span>
                            <span class="label-char" style="--index: 3">t</span>
                            <span class="label-char" style="--index: 4"> </span>
                            <span class="label-char" style="--index: 5">N</span>
                            <span class="label-char" style="--index: 6">a</span>
                            <span class="label-char" style="--index: 7">m</span>
                            <span class="label-char" style="--index: 8">e</span>
                        </label>
                    </div>
                </div>
            </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th> Email </th>
                <th> <div class="container">
           <div class="wave-group">
               <input required type="text" class="input" required value=<%= userData.email %> name="email" readonly>
               <span class="bar"></span>
               
           </div>
       </div>
 </th>
            </tr>

            <tr>
                <th>Country</th>
                <th> 

                    <select class="custom" style="width: 450px; margin: 0 0-10px 13px ;" name="country" id="id_country" autocomplete="country" data-initial-value="JO" required>
            <option value="FF" disabled>Select a country...</option>
              <option value="Bahrain">Bahrain</option>
              <option value="Cyprus">Cyprus</option>
              <option value="Egypt">Egypt</option>
              <option value="Iraq">Iraq</option>
              <option value="Jordan" selected>Jordan</option>
              <option value="Kuwait">Kuwait</option>
              <option value="Lebanon">Lebanon</option>
              <option value="Oman">Oman</option>
              <option value="Palestine">Palestine</option>
              <option value="Qatar">Qatar</option>
              <option value="Saudi Arabia">Saudi Arabia</option>
              <option value="Syria">Syria</option>
              <option value="Turkey">Turkey</option>
              <option value="United Arab Emirates">United Arab Emirates</option>
              <option value="Yemen">Yemen</option>
          </select>
</th>
            </tr>
            <tr>
                <th>City/Town</th>
                <th>

        <div class="container">
           <div class="wave-group">
               <input required type="text" class="input" required name="city" value=<%= userData.city %> > 
               <span class="bar"></span>
               <label class="label">
                   <span class="label-char" style="--index: 0">C</span>
                   <span class="label-char" style="--index: 1">i</span>
                   <span class="label-char" style="--index: 2">t</span>
                   <span class="label-char" style="--index: 3">y</span>
               </label>
           </div>
       </div>
                
</th>
            </tr>
            <tr>
                
            </tr>
            <tr>
                <th>University major</th>
                <th>
                  <select class="custom" style="width: 450px; margin: 0 0-10px 13px ;" name="major" id="id_major" autocomplete="major" required>
                    <option value="" disabled>Select a University major...</option>
                    <option value="Computer Science" <%= userData.major === 'Computer Science' ? 'selected' : '' %>>Computer Science</option>
                    <option value="Computer Information Systems" <%= userData.major === 'Computer Information Systems' ? 'selected' : '' %>>Computer Information Systems</option>
                    <option value="Software Engineering" <%= userData.major === 'Software Engineering' ? 'selected' : '' %>>Software Engineering</option>
                    <option value="Data Science and Artificial Intelligence" <%= userData.major === 'Data Science and Artificial Intelligence' ? 'selected' : '' %>>Data Science and Artificial Intelligence</option>
                    </select>                        
   </th>
